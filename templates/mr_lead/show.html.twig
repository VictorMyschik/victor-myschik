{% extends 'base.html.twig' %}

{% block title %}MrLead{% endblock %}

{% block body %}
	<div class="container">
		{{ include('mr_lead/_delete_form.html.twig') }}
		<h1>Заявка</h1>

		<table class="table table-sm table-hover">
			<tbody>
			<tr>
				<th>ID</th>
				<td>{{ mr_lead.id }}</td>
			</tr>
			<tr>
				<th>Статус</th>
				<td>{{ mr_lead.Status }}</td>
			</tr>
			<tr>
				<th>Номер телефона</th>
				<td>{{ mr_lead.phone }}</td>
			</tr>
			<tr>
				<th>Адрес</th>
				<td>{{ mr_lead.address }}</td>
			</tr>
			</tbody>
		</table>

		<a href="{{ path('mr_lead_index') }}" class="btn btn-primary btn-sm">Вернуться к списку заявок</a>

		<a href="{{ path('mr_lead_edit', {'lead_id': mr_lead.id}) }}" class="btn btn-primary btn-sm">изменить</a>


	</div>
{% endblock %}

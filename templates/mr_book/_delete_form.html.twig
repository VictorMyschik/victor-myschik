<form method="post" action="{{ path('mr_book_delete', {'id': mr_book.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mr_book.id) }}">
    <button class="btn btn-danger btn-sm">Удалить книгу</button>
</form>
